<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="7dp"
    android:paddingStart="7dp"
    android:weightSum="1"
    tools:context="personnal.askinquery.CreerSondageFragment">
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sondage_edit_done"
            style="@style/buttonCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_done_color"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="Terminer"
            android:textColor="@color/colorPrimary" />
    </com.balysv.materialripple.MaterialRippleLayout>

    <TextView
        android:id="@+id/sondage_edit_questions_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"
        android:visibility="invisible" />

    <!--<TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attention, le processus peut prendre du temps dû à l'envoi de nombreux fichiers au serveur"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat" />-->

    <TabHost
        android:id="@+id/TabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/TabSondage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Créer un sondage"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                            <EditText
                                android:id="@+id/sondage_edit_titre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Titre"
                                android:inputType="textPersonName" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/sondage_edit_titre_error"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:textColor="@color/colorRed"
                                android:visibility="invisible" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date d'échéance du sondage"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                            <DatePicker
                                android:id="@+id/sondage_edit_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:datePickerMode="spinner"
                                android:spinnersShown="false" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/sondage_edit_date_error"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorRed"
                                android:visibility="invisible" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date sélectionnée :"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/sondage_edit_date_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="@color/colorPrimaryDark" />

                            <CheckBox
                                android:layout_marginTop="5dp"
                                android:id="@+id/sondage_edit_public_results"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Résultats publiques" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Téléverser une image"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <com.balysv.materialripple.MaterialRippleLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/sondage_edit_upload_img"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:drawableTop="@drawable/ic_file_upload_color"
                                    android:text="Téléverser"
                                    android:textColor="@color/colorPrimary" />
                                </com.balysv.materialripple.MaterialRippleLayout>
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/LightGrey"
                                    />
                                <com.balysv.materialripple.MaterialRippleLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/sondage_edit_remove_img"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:drawableTop="@drawable/ic_clear_color"
                                    android:text="Retirer l'image"
                                    android:textColor="@color/colorRed" />
                                </com.balysv.materialripple.MaterialRippleLayout>
                            </LinearLayout>

                            <ImageView
                                android:layout_marginTop="5dp"
                                android:id="@+id/sondage_edit_image_preview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxHeight="100dp"
                                android:visibility="gone"
                                android:cropToPadding="false"
                                android:src="@drawable/ic_menu_gallery" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/TabQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/sondage_edit_add_question"
                                style="@style/buttonImageCustom"
                                android:layout_width="50dp"

                                android:layout_height="50dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_ajout"
                                android:tint="@color/colorPrimary" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    </RelativeLayout>

                    <ListView
                        android:id="@+id/sondage_edit_questions_list"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:descendantFocusability="beforeDescendants" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

</LinearLayout>
